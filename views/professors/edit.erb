<div class="listed col-md-6 col-md-offset-3">
  <div class="gray">
    <div class="marge">
      <h3>Edit the Professor below</h1>
    </div>
  </div>

  <div class="bottom">
    <div class="marge2">

      <form role="form" action="/professors/<%= @professor.id %>" method="post">

        <div class="form-group">
          <label for="name">Edit the first name</label>
          <input type="text" class="form-control" id="first_name" name="[professor]first_name" placeholder="<%= @professor.first_name %>">
        </div>

        <div class="form-group">
          <label for="name">Edit the last name</label>
          <input type="text" class="form-control" id="name" name="[professor]last_name" placeholder="<%= @professor.last_name %>">
        </div>

        <div class="form-group">
          <label for="name">Edit how many years of experience this professor has</label>
          <input type="text" class="form-control" id="name" name="[professor]yrs_experience" placeholder="<%= @professor.yrs_experience %>">
        </div>
        
        <input type="hidden" name="_method" value="put">
        
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>

<form class="form_grab" action="/professors/<%= @professor.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit" class="btn btn-default btn-lg">Delete</button>
</form>