<div class="listed col-md-6 col-md-offset-3">
  <div class="gray">
    <div class="marge">
      <h3>Add a New Professor</h1>
    </div>
  </div>

  <div class="bottom">
    <div class="marge2">

      <form role="form" action="/professors" method="post">

        <div class="form-group">
          <label for="name">First name</label>
          <input type="text" class="form-control" id="first_name" name="[professor]first_name" placeholder="Enter a first name for this professor">
        </div>

        <div class="form-group">
          <label for="name">Last name</label>
          <input type="text" class="form-control" id="name" name="[professor]last_name" placeholder="Enter a last name for this professor">
        </div>

        <div class="form-group">
          <label for="name">How many years of experience does this professor have?</label>
          <input type="text" class="form-control" id="name" name="[professor]yrs_experience" placeholder="Years of experience">
        </div>

        
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>