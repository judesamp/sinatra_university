<div class="listed col-md-6 col-md-offset-3">
  <div class="gray">
    <div class="marge">
      <h3>Create a New Subject</h1>
    </div>
  </div>

  <div class="bottom">
    <div class="marge2">

      <form role="form" action="/subjects" method="post">

        <div class="form-group">
          <label for="name">First name</label>
          <input type="text" class="form-control" id="name" name="[subject]name" placeholder="Enter a first name for this subject">
        </div>

        <div class="form-group">
          <label for="name">Does this subject have a major?</label>
          <input type="text" class="form-control" id="name" name="[subject]major" placeholder="Major?">
        </div>

         <div class="form-group">
          <label for="name">Professor ID</label>
          <input type="text" class="form-control" id="professor_id" name="[professor]course_id" placeholder="Professor ID">
        </div>
        
        <div class="form-group">
          <label for="name">Course ID</label>
          <input type="text" class="form-control" id="subject_id" name="[professor]subject_id" placeholder="Subject ID">
        </div>
        
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>