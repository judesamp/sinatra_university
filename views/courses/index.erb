<div class="container">
  <div class="row">
    <div class="listed col-md-6 col-md-offset-3">
        <p>Click on a course to see more detailed information or click <a href="/courses/new">here</a> to create a new course.</p>
          <ul class="no_decoration list-group">

          <% @courses.each do |course| %>
            
              <li class="list-group-item">
                <a href="/courses/<%= course.id %>">
                  <%= course.name %>: <%= course.course_number %> (<%= course.professor.first_name %> <%= course.professor.last_name %>) 
                </a>
                  <a href="/courses/<%= course.id %>/edit" class="leftpadded pull-right">Edit</a>
                  <a href="/courses/<%= course.id %>" class="view_link pull-right">View</a>
              </li>

          <% end %>
        </ul>
    </div> 
  </div>
</div>