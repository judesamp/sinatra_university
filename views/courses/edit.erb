<div class="listed col-md-6 col-md-offset-3">
  <div class="gray">
    <div class="marge">
      <h3>Edit the course below</h1>
    </div>
  </div>

  <div class="bottom">
    <div class="marge2">

      <form role="form" action="/courses/<%= @course.id %>" method="post">

        <div class="form-group">
          <label for="name">Edit the course name</label>
          <input type="text" class="form-control" id="name" name="[course]name" placeholder="<%= @course.name %>">
        </div>

        <div class="form-group">
          <label for="name">Edit the course number</label>
          <input type="text" class="form-control" id="course_number" name="[course]course_number" placeholder="<%= @course.course_number %>">
        </div>

        <div class="form-group">
          <label for="name">Edit the last semester taught field</label>
          <input type="text" class="form-control" id="last_semester_taught" name="[course]last_semester_taught" placeholder="<%= @course.last_semester_taught %>">
        </div>

        <div class="form-group">
          <label for="name">Edit when this class will be taught next</label>
          <input type="text" class="form-control" id="next_semester_taught" name="[course]next_semester_taught" placeholder="<%= @course.next_semester_taught %>">
        </div>

        <div class="form-group">
          <label for="name">Change the professor who is teaching this class</label>
          <select class="form-control" name="[course]professor_id">
            <% @professors.each do |professor| %>
              <option value="<%= professor.id%>"><%= professor.first_name %> <%= professor.last_name %></option>
            <% end %>
          </select>
          
        </div>
        
        <div class="form-group">
          <label for="name">Change the building where this class will be taught</label>

           <select class="form-control" name="[course]building_id">
            <% @buildings.each do |building| %>
              <option value="<%= building.id%>"><%= building.name %> </option>
            <% end %>
          </select>
          
        </div>

        <input type="hidden" name="_method" value="put">
        
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>

<form class="form_grab" action="/courses/<%= @course.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit" class="btn btn-default btn-lg">Delete</button>
</form>