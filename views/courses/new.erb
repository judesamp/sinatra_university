<div class="listed col-md-6 col-md-offset-3">
  <div class="gray">
    <div class="marge">
      <h3>Create a New Course</h1>
    </div>
  </div>

  <div class="bottom">
    <div class="marge2">

      <form role="form" action="/courses" method="post">

        <div class="form-group">
          <label for="name">Course name</label>
          <input type="text" class="form-control" id="name" name="[course]name" placeholder="Enter a name for this course">
        </div>

        <div class="form-group">
          <label for="name">Course number</label>
          <input type="text" class="form-control" id="number" name="[course]course_number" placeholder="Enter a number for this course">
        </div>

        <div class="form-group">
          <label for="name">When was this course last taught?</label>
          <input type="text" class="form-control" id="last_semester_taught" name="[course]last_semester_taught" placeholder="Last semester taught">
        </div>

        <div class="form-group">
          <label for="name">When will this class be taught next?</label>
          <input type="text" class="form-control" id="next_semester_taught" name="[course]next_semester_taught" placeholder="Next semester taught">
        </div>

         <div class="form-group">
          <label for="name">Choose a professor to teach this class</label>
          <select class="form-control" name="[course]professor_id">
            <option disabled selected>Choose a professor</option>
            <% @professors.each do |professor| %>
              <option value="<%= professor.id%>"><%= professor.first_name %> <%= professor.last_name %></option>
            <% end %>
          </select>
          
        </div>
        
        <div class="form-group">
          <label for="name">Choose the building where this class will be taught</label>
           <select class="form-control" name="[course]building_id">
            <option disabled selected>Choose a building</option>
            <% @buildings.each do |building| %>
              <option value="<%= building.id%>"><%= building.name %> </option>
            <% end %>
          </select>
          
        </div>
        
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>