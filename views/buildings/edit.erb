<div class="listed col-md-6 col-md-offset-3">
  <div class="gray">
    <div class="marge">
      <h3>Edit your building below</h1>
    </div>
  </div>

  <div class="bottom">
    <div class="marge2">

      <form role="form" action="/buildings/<%= @building.id %>" method="post">

        <div class="form-group">
          <label for="name">Edit the name of the building</label>
          <input type="text" class="form-control" id="name" name="[building]name" placeholder="<%= @building.name %>">
        </div>

        <div class="form-group">
          <label for="name">Edit the number of rooms in the building.</label>
          <input type="text" class="form-control" id="name" name="[building]number_of_rooms" placeholder="<%= @building.number_of_rooms %>">
        </div>

        <input type="hidden" name="_method" value="put">
        
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>

<form class="form_grab" action="/buildings/<%= @building.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit" class="btn btn-default btn-lg">Delete</button>
</form>